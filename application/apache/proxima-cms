<VirtualHost *:80>
	DocumentRoot	/var/www/proxima-cms/httpdocs
	ServerName	proxima-cms

	UseCanonicalName On

	CustomLog /var/log/apache2/proxima-cms-alogs combined
	ErrorLog /var/log/apache2/proxima-cms-elogs

	# Set the environment
	SetEnv KOHANA_ENV development

	<Directory /var/www/proxima-cms/httpdocs>
		AllowOverride All
	</Directory>

</VirtualHost>
